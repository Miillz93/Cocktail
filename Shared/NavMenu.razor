@using Pages.Cocktails;

<MudAppBar Color="Color.Success" Elevation="1">
        <MudText 
            Typo="Typo.h5"
            Class="ml-3"><MudLink Href="/" Underline="Underline.None" Color="Color.Inherit" Typo="Typo.h5">CocktailAPP</MudLink></MudText>
        <MudSpacer />
        <MudTextField 
            @bind-Value="drinkItem"
            Placeholder="Search"
            DisableUnderLine
            Variant="Variant.Filled" 
            Margin="Margin.Dense"
            OnKeyUp="getDrinkItems"
            Adornment ="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search"
            AdornmentColor="Color.Inherit">
        </MudTextField>
        <MudSpacer />
        <MudLink Href="https://github.com/miillz93"
            Underline="Underline.None">
            <MudIconButton
                Icon="@Icons.Custom.Brands.GitHub"
                Color="Color.Dark"
                Title="Github"/>
        </MudLink>
        
</MudAppBar>
<br><br><br><br><br><br>
<p>@drinkItem</p>



@code{
    public static string drinkItem { get; set; } 

    public void getDrinkItems(){
        System.Console.WriteLine(drinkItem);
    }
    
    

}